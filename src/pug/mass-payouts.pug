extends layouts/_layout.pug

block meta-data
	+meta-data(
	'Website title', 
	'Website description', 
	'https://uapay.com/'
	)

block header
	+header('red-header')

block main-content
	.inner-page-wrapper.mass-payouts-page
		.intro-block.red-intro-block
			.container
				h1 Масові платежі
		.mass-payouts-content
			.first-block
				.container
					p.intro-text
						b Разработан для тех, кому нужно выплачивать вознаграждение или выдавать займы на банковские карты любому количеству получателей. Все выплаты происходят в режиме онлайн.
					.flex-block
						.flex-item
							figure
								img(src="./images/mass-payouts/settings.png", alt="Image")
							h5 Автоматизация
							p Загружайте готовый файл в вашем кабинете или делайте выплаты использую наше API
						.flex-item
							figure
								img(src="./images/mass-payouts/profile.png", alt="Image")
							h5 Личный кабинет
							p Смотрите в режиме онлайн историю платежей, данные получателя, состояние счета, а также статусы по каждой операции
						.flex-item
							figure
								img(src="./images/mass-payouts/prices.png", alt="Image")
							h5 Гибкие тарифы
							p Предлагаем уникальные тарифы которые будут комфортными для вашей бизнес модели
					h4.text-center Идеально подходит
			.second-block
				.container
			.third-block
				.container
					.flex-block
						.flex-left
							img(src="./images/svg/api-cms.svg", alt="Image")
						.flex-right