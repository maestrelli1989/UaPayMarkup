//- Developers block mixin

mixin developers(className)
	.developers-block(class=className)
		.container.main-container
			.flex-block.animatedParent.animateOnce(data-sequence='500')
				.flex-left.animated.fadeInLeft(data-id='1')
					img(src="./images/svg/api-cms.svg", alt="Image")
				.flex-right.animated.fadeInRight(data-id='1')
					h4 Разработчикам
					p Мы предоставляем универсальный платежный API и готовые модули для CMS-систем, которые позволят очень быстро и просто подключить оплату на сайте.
					include ../includes/components/_developers-btn.pug

