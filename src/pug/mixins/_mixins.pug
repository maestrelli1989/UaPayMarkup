//- Meta data mixin

mixin meta-data(title, description, href)
	title=title
	meta(name="description", content=description)
	link(rel="canonical", href=href)

//- Header mixin

mixin header(className)
	header.header(class=className)
		.container.animatedParent.animateOnce(data-sequence='500')
			.header-flex.animated.fadeInDown(data-id='1')
				.header-flex-left
					a(href="/", class="site-logo-link")
						img(src="./images/logo/site-logo.png", alt="Logo")
					.menu
						.menu-item
							.menu-trigger#business-trigger Бізнесу
							.sub-menu-wrapper#business-sub-menu
								.triangle
								.sub-menu.business-sub-menu
									a(href="uapay-checkout") UAPAY Checkout
									a(href="mass-payouts") Масові платежі
									a(href="industry-solutions") Галузеві рішення
						.menu-item
							.menu-trigger#user-trigger Користувачу
							.sub-menu-wrapper#user-sub-menu
								.triangle
								.sub-menu.user-sub-menu
									a(href="javascript:void(0);") Штрафи UAPAY
									a(href="javascript:void(0);") Оплата послуг
									a(href="javascript:void(0);") Грошові перекази
									a(href="javascript:void(0);") Безпечна угода
						.menu-item
							.menu-trigger#company-trigger Компанія
							.sub-menu-wrapper#company-sub-menu
								.triangle
								.sub-menu.company-sub-menu
									a(href="about-us") Про нас
									a(href="news") Новини
									a(href="javascript:void(0);") FAQ
									a(href="javascript:void(0);") Партнерство
									a(href="legal-info") Правова інформація
						.menu-item
							.menu-trigger#developers-trigger Розробникам
							.sub-menu-wrapper#developers-sub-menu
								.triangle
								.sub-menu.developers-sub-menu
									a(href="javascript:void(0);") API
									a(href="javascript:void(0);") Модулі CMS
				.header-flex-right
					a.feedback-link(href="javascript:void(0);") Зворотний зв'язок
					a.btn-ghost-white(href="javascript:void(0);") Особистий кабінет

//- Preferences block mixin

mixin preferences(className)
	.preferences-block(class=className)
		.container.main-container
			.flex-block.animatedParent.animateOnce(data-sequence='300')
				.flex-item.animated.fadeIn(data-id='1')
					figure
						img(src="./images/about-us/pci-dss.png", alt="Image")
					p.title PCI DSS Level 1
					p.desc 100% відповідність стандартам безпеки платежів
				.flex-item.animated.fadeIn(data-id='2')
					figure
						img(src="./images/about-us/gdpr.png", alt="Image")
					p.title GDPR Compliant
					p.desc Робота з персональними даними чітко регламентована
				.flex-item.animated.fadeIn(data-id='3')
					figure
						img(src="./images/about-us/ukraine.png", alt="Image")
					p.title ВПС
					p.desc Статус внутрішньодержавної платіжної системи
				.flex-item.animated.fadeIn(data-id='4')
					figure
						img(src="./images/about-us/paperless.png", alt="Image")
					p.title Paperless
					p.desc Максимальна підтримка електронного документообігу
				.flex-item.animated.fadeIn(data-id='5')
					figure
						img(src="./images/about-us/structure.png", alt="Image")
					p.title ОПІ
					p.desc Ліцензія оператора платіжної інфраструктури
				.flex-item.animated.fadeIn(data-id='6')
					figure
						img(src="./images/about-us/licence.png", alt="Image")
					p.title Ліцензія НБУ
					p.desc Переказ коштів у національній валюті, без без відкриття рахунків

